
<h1>Viewing Bounce</h1>

<% if @bounce.status.eql?('needs_manual_intervention') %>
<div>
  <%= link_to "Unsubscribe", MailManager.fail_address_bounce_path(@bounce), :class => 'button' %><div class="linkbuttonEnding"></div>
    &nbsp;
  <%= link_to "Dismiss", MailManager.dismiss_bounce_path(@bounce), :class => 'button' %><div class="linkbuttonEnding"></div>
</div>
<% end %>

<p>
  <b>Status:</b>
  <%=h @bounce.status %>
</p>

<p>
  <b>Status changed at:</b>
  <%=h @bounce.status_changed_at %>
</p>
<p>
  <b>Comments:</b>
  <%=h @bounce.comments %>
</p>

<p>
  <b>Bounce Message:</b>
<hr/>
  <%= render :partial => 'mail_manager/bounces/email_parts', :locals => {:email => @bounce.email} %>
<hr/>
</p>

<%= content_for :page_navigation do %>
<div>
  <%= link_to "Back", MailManager.bounces_path(:mailing_id => @mailing.id, 
      :bounce => {:status => @bounce.status}), :class => 'button' %><div class="linkbuttonEnding"></div>
</div>
<% end %>
